---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
---

<Layout title="Welcome to Astro.">
    <main>
        <section class="w-full mx-auto lg:w-[740px] py-44">
            <img class="rounded-full w-12 h-12 mb-2" src="../../public/tesla.avif" alt="photo">
            <h1 class="text-white text-5xl font-bold
      flex flex-row gap-x-4 pb-4">
                Hey!, soy Calcifer
                <div class="flex justify-center items-center">
                    <a class="flex justify-center items-center" href="https://linkedin.com">
                        <Badge>Disponible para trabajar</Badge>
                    </a>
                </div>
            </h1>
            <h2 class="text-2xl opacity-80 text-wrap">
                +3 años de experiencia. Desarrollador <span class="text-yellow-200">Fullstack </span>(ಥ_ಥ),
                De <span class="text-green-200">Bocas del Toro</span>, <span class="text-blue-200">Panamá</span>.
                Especializado en hacer aplicaciones únicas
            </h2>

            <ul>
                <li>
                    <SocialPill>
                        <LinkedIn class="w-6 h-6"}/>
                        LinkedIn
                    </SocialPill>
                </li>
